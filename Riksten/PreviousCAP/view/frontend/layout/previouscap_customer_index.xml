<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Recently Viewed</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Magento\Reports\Block\Product\Widget\Viewed"
                   name="recently_viewed"
                   template="Riksten_PreviousCAP::widget/viewed/content/viewed_list.phtml">
                <arguments>
                    <argument name="uiComponent" xsi:type="string">widget_recently_viewed</argument>
                    <argument name="page_size" xsi:type="number">10</argument>
                    <argument name="show_attributes" xsi:type="string">name,price</argument>
                    <argument name="show_buttons" xsi:type="string"> add_to_cart,add_to_compare,add_to_wishlist</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
